{
  "name": "@re-career/frontend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "career-web",
    "career-native"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "dev:web": "pnpm --filter career-web dev",
    "dev:native": "pnpm --filter career-native start",
    "build:web": "pnpm --filter career-web build",
    "start:web": "pnpm --filter career-web start",
    "start:native": "pnpm --filter career-native start",
    "android": "pnpm --filter career-native android",
    "ios": "pnpm --filter career-native ios",
    "expo": "pnpm --filter career-native start",
    "expo:tunnel": "pnpm --filter career-native start --tunnel",
    "native:web": "pnpm --filter career-native web",
    "reset-project": "pnpm --filter career-native reset-project",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "lint:web": "pnpm --filter career-web lint",
    "lint:native": "pnpm --filter career-native lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules && pnpm store prune",
    "clean:cache": "rm -rf node_modules && rm -rf */node_modules && rm -rf .next && rm -rf */.next && rm -rf .expo && rm -rf */.expo && pnpm store prune",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  }
}
